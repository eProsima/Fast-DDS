names:
    fastdds:
        cmake-args:
            - "-DEPROSIMA_BUILD_TESTS=OFF"
            - "-DFASTDDS_PIM_API_TESTS=OFF"
            - "-DPERFORMANCE_TESTS=OFF"
            - "-DPROFILING_TESTS=OFF"
            - "-DCOMPILE_TOOLS=ON"
            - "-DSYSTEM_TESTS=OFF"
        ctest-args: [
                "--repeat", "until-pass:3",
                "--timeout", "300",
                "--label-exclude", "xfail"
        ]
    googletest-distribution:
        cmake-args:
            - "-Dgtest_force_shared_crt=ON"
            - "-DBUILD_SHARED_LIBS=ON"
            - "-DBUILD_GMOCK=ON"
