    <UseDebugLibraries>$if(it.debug)$true$else$false$endif$</UseDebugLibraries>
    <UseOfMfc>false</UseOfMfc>
    <CharacterSet>MultiByte</CharacterSet>
	<PlatformToolset>v$vsVersion$0</PlatformToolset>
  </PropertyGroup>};separator="\n"$
