>>

postSolutionJava(solution, project, conf) ::= <<

$\t$$\t${$project.jniGuid$}.$conf.name$|$conf.platform$.ActiveCfg = $conf.name$|$conf.platform$
$\t$$\t${$project.jniGuid$}.$conf.name$|$conf.platform$.Build.0 = $conf.name$|$conf.platform$
>>

