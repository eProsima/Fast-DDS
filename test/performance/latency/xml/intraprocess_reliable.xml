<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <library_settings>
        <intraprocess_delivery>FULL</intraprocess_delivery>
    </library_settings>

    <profiles>
        <!-- PUBLISHER -->
        <participant profile_name="pub_participant_profile">
            <domainId>231</domainId>
            <rtps>
                <builtin>
                    <discovery_config>
                        <ignoreParticipantFlags>FILTER_DIFFERENT_PROCESS | FILTER_DIFFERENT_HOST</ignoreParticipantFlags>
                        <leaseAnnouncement>
                            <sec>DURATION_INFINITY</sec>
                        </leaseAnnouncement>
                        <leaseDuration>
                            <sec>DURATION_INFINITY</sec>
                        </leaseDuration>
                        <initialAnnouncements>
                            <count>0</count>
                        </initialAnnouncements>
                    </discovery_config>
                </builtin>
                <name>latency_test_publisher</name>
            </rtps>
        </participant>
        <publisher profile_name="pub_publisher_profile">
            <topic>
                <name>latency_intraprocess_pub2sub</name>
                <dataType>LatencyType</dataType>
                <kind>NO_KEY</kind>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
        </publisher>
        <subscriber profile_name="pub_subscriber_profile">
            <topic>
                <name>latency_intraprocess_sub2pub</name>
                <dataType>LatencyType</dataType>
                <kind>NO_KEY</kind>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
        </subscriber>

        <!-- SUBSCRIBER -->
        <participant profile_name="sub_participant_profile">
            <domainId>231</domainId>
            <rtps>
                <builtin>
                    <discovery_config>
                        <ignoreParticipantFlags>FILTER_DIFFERENT_PROCESS | FILTER_DIFFERENT_HOST</ignoreParticipantFlags>
                        <leaseAnnouncement>
                            <sec>DURATION_INFINITY</sec>
                        </leaseAnnouncement>
                        <leaseDuration>
                            <sec>DURATION_INFINITY</sec>
                        </leaseDuration>
                        <initialAnnouncements>
                            <count>0</count>
                        </initialAnnouncements>
                    </discovery_config>
                </builtin>
                <name>latency_test_subscriber</name>
            </rtps>
        </participant>
        <publisher profile_name="sub_publisher_profile">
            <topic>
                <name>latency_intraprocess_sub2pub</name>
                <dataType>LatencyType</dataType>
                <kind>NO_KEY</kind>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
        </publisher>
        <subscriber profile_name="sub_subscriber_profile">
            <topic>
                <name>latency_intraprocess_pub2sub</name>
                <dataType>LatencyType</dataType>
                <kind>NO_KEY</kind>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
        </subscriber>
    </profiles>
</dds>
