<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <library_settings>
        <intraprocess_delivery>FULL</intraprocess_delivery>
    </library_settings>

    <profiles>
        <!-- PARTICIPANTS -->
        <participant profile_name="pub_participant_profile">
            <domainId>222</domainId>
            <rtps>
                <builtin>
                    <discovery_config>
                        <ignoreParticipantFlags>FILTER_DIFFERENT_PROCESS | FILTER_DIFFERENT_HOST</ignoreParticipantFlags>
                        <leaseAnnouncement>
                            <sec>DURATION_INFINITY</sec>
                        </leaseAnnouncement>
                        <leaseDuration>
                            <sec>DURATION_INFINITY</sec>
                        </leaseDuration>
                        <initialAnnouncements>
                            <count>0</count>
                        </initialAnnouncements>
                    </discovery_config>
                </builtin>
                <name>throughput_test_publisher</name>
            </rtps>
        </participant>

        <participant profile_name="sub_participant_profile">
            <domainId>222</domainId>
            <rtps>
                <builtin>
                    <discovery_config>
                        <ignoreParticipantFlags>FILTER_DIFFERENT_PROCESS | FILTER_DIFFERENT_HOST</ignoreParticipantFlags>
                        <leaseAnnouncement>
                            <sec>DURATION_INFINITY</sec>
                        </leaseAnnouncement>
                        <leaseDuration>
                            <sec>DURATION_INFINITY</sec>
                        </leaseDuration>
                        <initialAnnouncements>
                            <count>0</count>
                        </initialAnnouncements>
                    </discovery_config>
                </builtin>
                <name>throughput_test_subscriber</name>
            </rtps>
        </participant>

        <!-- PUBLISHER -->
        <publisher profile_name="publisher_profile">
            <topic>
                <name>throughput_interprocess</name>
                <dataType>ThroughputType</dataType>
                <kind>NO_KEY</kind>
                <historyQos>
                    <kind>KEEP_ALL</kind>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
            </qos>
        </publisher>

        <!-- SUBSCRIBER -->
        <subscriber profile_name="subscriber_profile">
            <topic>
                <name>throughput_interprocess</name>
                <dataType>ThroughputType</dataType>
                <kind>NO_KEY</kind>
                <historyQos>
                    <kind>KEEP_ALL</kind>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
            </qos>
        </subscriber>
    </profiles>
</dds>
